{% set counter = 0 %}
{% set group = 3 %}
{% set limit = dssp1|length %}
{% set col_class_name = (12 / group) %}
<section name="innisfree">
    <div class="innisfree text-center">
        <h1>INNISFREE</h1>
    </div>
    <div class="dssp1 py-5 bg-light">
        <div class="container">
            <div class="row">
                {% for sanpham in dssp1 %}
                <div class="col-md-{{ col_class_name }}">
                    <div class="card mb-4 shadow-sm">
                        {% if sanpham.hsp_tentaptin %}
                        <a href="/sephora.com/backends/sanpham/chitiet?sp_ma={{ sanpham.sp_ma }}">
                            <img class="bd-placeholder-img card-img-top" width="100%" height="350"
                                src="/sephora.com/assets/uploads/{{ sanpham.hsp_tentaptin }}" />
                        </a>
                        {% else %}
                        <a href="/sephora.com/backends/sanpham/chitiet?sp_ma={{ sanpham.sp_ma }}">
                            <img class="bd-placeholder-img card-img-top" width="100%" height="350"
                                src="/sephora.com/vendor/img/no_img.jpg" />
                        </a>
                        {% endif %}
                        <div class="card-body">
                            <a href="/sephora.com/backends/sanpham/chitiet?sp_ma={{ sanpham.sp_ma }}">
                                <h5>{{ sanpham.sp_ten }}</h5>
                            </a>
                            <h6>{{ sanpham.lsp_ten }}</h6>
                            <p class="card-text">{{ sanpham.sp_mota_ngan }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-dark"
                                        href="/sephora.com/backends/sanpham/chitiet?sp_ma={{ sanpham.sp_ma }}">Xem chi
                                        tiết</a>
                                </div>
                                <small class="text-muted text-right">
                                    <s>{{ sanpham.sp_giacu }}</s>
                                    <b>{{ sanpham.sp_gia }}</b>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
                {% set counter = counter + 1 %}
                {% if (counter % group == 0 and counter < limit) %}
            </div>
            <div class="row">
                {% endif %}

                {% endfor %}
            </div>
        </div>
    </div>
</section>

