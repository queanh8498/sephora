{% endblock %}
{# End Nội dung trong block title #}

{# Nội dung trong block headline #}
{% block headline %}
Sản phẩm
{% endblock %}
{# End Nội dung trong block headline #}

{# Nội dung trong block content #}

{% block content %}
<br>
<div class="container-fluid"></div>
<a href="create.php" class="btn btn-warning">Thêm mới</a>
<br><br>
<table class="table table-bodered table-hover" >
    <tr>
        <th>Tên SP</th>
        <th>Gía</th>
        <th>Gía cũ</th>
        <th>Số lượng </th>
        <th>Tên LSP</th>
        <th>NSX</th>
        <th>Chức năng</th>

    </tr>
    <div class="danhsachsanpham">
        {% for sanpham in danhsachsanpham %}
        <tr>
            <td>{{ sanpham.sp_ten }}</td>
            <td>{{ sanpham.sp_gia }}</td>
            <td>{{ sanpham.sp_giacu }}</td>
            <td>{{ sanpham.sp_soluong }}</td>
            <td>{{ sanpham.lsp_ten }}</td>
            <td>{{ sanpham.nsx_ten }}</td>
            <td>
                <a href="edit?sp_ma={{ sanpham.sp_ma }}" class="btn btn-dark">
                    <span data-feather="edit"></span> Sửa
                </a>

                <a href="delete?sp_ma={{ sanpham.sp_ma }}" class="btn btn-danger">
                    <span data-feather="delete"></span> Xóa
                </a>
            </td>
        </tr>
        {% endfor %}
    </div>
</table>
</div>
{% endblock %}
{# End Nội dung trong block content #}